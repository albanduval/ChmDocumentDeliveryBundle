<ul class="list-inline">
	{% if document.dateRestrictions is not empty %}
	<li>
		<span class="chm_popover fa-stack" title="Date restrictions" data-content="{% include 'ChmDocumentBundle:DocumentUpload:date_restrictions_popover_content.html.twig' with {'restrictions': document.dateRestrictions } %}">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-calendar fa-stack-1x fa-inverse"></i>
		</span>
	</li>
	{% endif %}
	{% if document.ipRestrictions is not empty %}
	<li>
		<span class="chm_popover fa-stack" title="IP restrictions" data-content="{% include 'ChmDocumentBundle:DocumentUpload:ip_restrictions_popover_content.html.twig' with {'restrictions': document.ipRestrictions } %}">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-sitemap fa-stack-1x fa-inverse"></i>
		</span>
	</li>
	{% endif %}
	{% if document.downloadCountRestrictions is not empty %}
	<li>
		<span class="chm_popover fa-stack" title="Download count restrictions" data-content="{% include 'ChmDocumentBundle:DocumentUpload:download_count_restrictions_popover_content.html.twig' with {'restrictions': document.downloadCountRestrictions } %}">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-dashboard fa-stack-1x fa-inverse"></i>
	</li>
	{% endif %}
	{% if document.userRestrictions is not empty %}
	<li>
		<span class="chm_popover fa-stack" title="User restrictions" data-content="{% include 'ChmDocumentBundle:DocumentUpload:user_restrictions_popover_content.html.twig' with {'restrictions': document.userRestrictions } %}">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-user fa-stack-1x fa-inverse"></i>
		</span>
	</li>
	{% endif %}
	{% if document.secretRestrictions is not empty %}
	<li>
		<span class="chm_popover fa-stack" title="Secret restrictions" data-content="{% include 'ChmDocumentBundle:DocumentUpload:secret_restrictions_popover_content.html.twig' with {'restrictions': document.secretRestrictions } %}">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-key fa-stack-1x fa-inverse"></i>
		</span>
	</li>
	{% endif %}
</ul>
